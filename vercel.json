{
  "version": 2,
  "git": { "deploymentEnabled": false },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "Cross-Origin-Opener-Policy", "value": "same-origin-allow-popups" }]
    }
  ],
  "rewrites": [
    { "source": "/(api|auth|db|v1)/:match*", "destination": "/api/proxy" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
